{
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "es2017": true,
    "browser": true
  },
  "extends": "htmlacademy/vanilla",
  "rules": {
    "no-undef": 0,
    "radix": 0,
    "no-unused-expressions": 0,
    "no-shadow": 0,
    "no-useless-escape": 0,
    "no-inner-declarations": 0
  }
}
